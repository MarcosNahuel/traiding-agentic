# ===========================================
BINANCE_PROXY_URL=
BINANCE_PROXY_AUTH_SECRET=

# ===========================================
# Security
# ===========================================
# Shared secret for Next.js → Python backend auth (must match on both sides)
BACKEND_SECRET=
# Optional key to enable /api/diagnostic* in production.
# If empty, diagnostic endpoints return 404 in production.
DIAGNOSTIC_KEY=
# Enable/disable trade execution (kill switch)
TRADING_ENABLED=false
# Comma-separated allowed CORS origins for Python backend
ALLOWED_ORIGINS=http://localhost:3000,https://traiding-agentic.vercel.app

# ===========================================
# Python Backend (VPS) - Quant Engine
# ===========================================
PYTHON_BACKEND_URL=https://italicia-traiding-backend.un5bby.easypanel.host
QUANT_ENABLED=true
QUANT_PRIMARY_INTERVAL=1h
QUANT_SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,XRPUSDT
ENTROPY_THRESHOLD_RATIO=0.75
KELLY_DAMPENER=0.35
ATR_MULTIPLIER=2.5
MAX_RISK_PER_TRADE_PCT=0.01
QUANT_BUY_NOTIONAL_USD=60

